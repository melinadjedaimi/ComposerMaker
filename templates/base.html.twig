<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Melya{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">Melya</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_product_index') }}">Produits</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="rightMenuDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ☰ Menu
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="rightMenuDropdown">
                                <li><h6 class="dropdown-header">Catégories</h6></li>
                                <li><a class="dropdown-item" href="{{ path('app_category_index') }}">Toutes les catégories</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_category_show', {'id': 1}) }}">Colliers</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_category_show', {'id': 2}) }}">Boucles d'oreilles</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_category_show', {'id': 3}) }}">Bracelets</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_category_show', {'id': 4}) }}">Bagues</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Votre compte</h6></li>
                                {% if app.user %}
                                    <li><a class="dropdown-item" href="{{ path('app_profile_show') }}">Mon profil</a></li>
                                    {% if 'ROLE_ADMIN' in app.user.roles %}
                                        <li><a class="dropdown-item" href="{{ path('app_admin_dashboard') }}">Admin</a></li>
                                    {% endif %}
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a></li>
                                {% else %}
                                    <li><a class="dropdown-item" href="{{ path('app_register') }}">Créer un compte</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_login') }}">Se connecter</a></li>
                                {% endif %}
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Panier</h6></li>
                                <li><a class="dropdown-item" href="{{ path('app_cart') }}">
                                    Votre panier
                                    {% if app.session.get('cart') is defined and app.session.get('cart')|length > 0 %}
                                        <span class="badge bg-secondary ms-2">{{ app.session.get('cart')|length }}</span>
                                    {% endif %}
                                </a></li>
                                {% if app.user %}
                                    <li><a class="dropdown-item" href="{{ path('app_wishlist') }}">
                                        Wishlist
                                        {% if app.user.wishlists is defined and app.user.wishlists|length > 0 %}
                                            <span class="badge bg-secondary ms-2">{{ app.user.wishlists|length }}</span>
                                        {% endif %}
                                    </a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main class="site-main">
            {% block body %}{% endblock %}
        </main>

        <footer>
            <div class="container">
                <span>Melya &mdash; Collection de bijoux raffinés</span>
                <ul class="list-inline mt-2">
                    <li class="list-inline-item"><a href="{{ path('app_contact') }}">Contact</a></li>
                    <li class="list-inline-item"><a href="{{ path('app_mentions_legales') }}">Mentions légales</a></li>
                    <li class="list-inline-item"><a href="{{ path('app_cgu') }}">CGU</a></li>
                    <li class="list-inline-item"><a href="{{ path('app_cgv') }}">CGV</a></li>
                    <li class="list-inline-item"><a href="{{ path('app_privacy') }}">Politique de confidentialité</a></li>
                    <li class="list-inline-item"><a href="{{ path('app_about') }}">Qui sommes-nous ?</a></li>
                </ul>
            </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
