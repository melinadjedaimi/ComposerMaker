{% extends "base.html.twig" %}

{% block title %}Modifier mon Profil - Melya{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="mb-4">Modifier mon Profil</h1>

            {% if app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {% for message in app.flashes('error') %}
                        {{ message }}
                    {% endfor %}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endif %}

            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'profile-form', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            {% if form.email.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.email.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password) }}
                            {% if form.password.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.password.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="d-grid gap-2 d-md-flex">
                            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                            <a href="{{ path('app_profile_show') }}" class="btn btn-secondary">Annuler</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
