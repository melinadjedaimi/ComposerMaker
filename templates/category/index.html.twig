{% extends 'base.html.twig' %}

{% block title %}Catégories de Bijoux{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Nos Catégories de Bijoux</h1>

    <div class="row">
        {% for category in categories %}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{ category.name }}</h5>
                    <p class="card-text">{{ category.text }}</p>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary">Voir les produits</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-secondary">Modifier</a>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <p class="text-center">Aucune catégorie trouvée.</p>
        </div>
        {% endfor %}
    </div>

    <div class="mt-4">
        <a href="{{ path('app_category_new') }}" class="btn btn-success">Créer une nouvelle catégorie</a>
    </div>
</div>
{% endblock %}
