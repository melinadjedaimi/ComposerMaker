{% extends 'base.html.twig' %}

{% block title %}Ma Wishlist - Bijoux Élégants{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="section-title">Ma wishlist</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('info') %}
        <div class="alert alert-info">{{ message }}</div>
    {% endfor %}

    {% if wishlists is empty %}
        <div class="text-center">
            <p class="lead">Votre wishlist est vide.</p>
            <a href="{{ path('app_product_index') }}" class="btn btn-submit">Découvrir nos produits</a>
        </div>
    {% else %}
        <div class="row">
            {% for wishlist in wishlists %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if wishlist.product.image %}
                        <img src="{{ wishlist.product.image }}" class="card-img-top" alt="{{ wishlist.product.name }}" style="height: 200px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ wishlist.product.name }}</h5>
                            <p class="card-text">{{ wishlist.product.description }}</p>
                            <p class="card-text"><strong>{{ wishlist.product.price }} €</strong></p>
                            <p class="card-text"><small class="text-muted">Matériau: {{ wishlist.product.material }}</small></p>
                            <div class="mt-auto">
                                <a href="{{ path('app_product_show', {'id': wishlist.product.id}) }}" class="btn btn-outline-primary me-2">Voir le produit</a>
                                <a href="{{ path('app_wishlist_remove', {'id': wishlist.id}) }}" class="btn btn-outline-danger"
                                   onclick="return confirm('Êtes-vous sûr de vouloir retirer ce produit de votre wishlist ?')">Retirer</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
