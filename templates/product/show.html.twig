{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Bijoux Élégants{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>{{ product.name }}</h1>
            <p class="lead">{{ product.description }}</p>
            <p><strong>Prix: {{ product.price }} €</strong></p>
            <p>Matériau: {{ product.material }}</p>
            <p>Stock disponible: {{ product.stock }}</p>
            {% if product.category %}
            <p>Catégorie: <a href="{{ path('app_category_show', {'id': product.category.id}) }}">{{ product.category.name }}</a></p>
            {% endif %}
        </div>
        <div class="col-md-4">
            <!-- Product image -->
            <div class="card">
                <div class="card-body text-center">
                    {% if product.image %}
                        <img src="{{ product.image }}" class="img-fluid" alt="{{ product.name }}" style="max-height: 300px; object-fit: contain;">
                    {% else %}
                        <p>Image du produit</p>
                    {% endif %}
                </div>
            </div>
            <div class="mt-3">
                <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-success btn-lg me-2">Ajouter au panier</a>
                {% if app.user %}
                    <a href="{{ path('app_wishlist_add', {'id': product.id}) }}" class="btn btn-outline-secondary btn-lg">Ajouter à la wishlist</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="mt-4">
        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
{% endblock %}
