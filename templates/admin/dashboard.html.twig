{% extends "base.html.twig" %}

{% block title %}Tableau de bord Admin - Melya{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-5">
        <div class="col-lg-8">
            <h1>Tableau de Bord Admin</h1>
            <p class="text-muted">Bienvenue sur l'interface d'administration de Melya</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Produits</h5>
                    <p class="display-4">{{ productCount }}</p>
                    <a href="{{ path('app_admin_products') }}" class="btn btn-primary btn-sm">Gérer</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Catégories</h5>
                    <p class="display-4">{{ categoryCount }}</p>
                    <a href="{{ path('app_admin_categories') }}" class="btn btn-primary btn-sm">Gérer</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Commandes</h5>
                    <p class="display-4">{{ orderCount }}</p>
                    <a href="{{ path('app_admin_orders') }}" class="btn btn-primary btn-sm">Consulter</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <h5 class="card-title">Messages</h5>
                    <p class="display-4">{{ contactCount }}</p>
                    <a href="{{ path('app_admin_messages') }}" class="btn btn-primary btn-sm">Consulter</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
