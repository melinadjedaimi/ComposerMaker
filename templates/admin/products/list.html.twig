{% extends "base.html.twig" %}

{% block title %}Gérer les Produits - Melya Admin{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col-lg-8">
            <h1>Produits</h1>
        </div>
        <div class="col-lg-4 text-end">
            <a href="{{ path('app_product_new') }}" class="btn btn-success">+ Ajouter un produit</a>
        </div>
    </div>

    {% if app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {% for message in app.flashes('success') %}
                {{ message }}
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}

    {% if products|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Catégorie</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                        <tr>
                            <td>
                                {% if product.image %}
                                    <img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.name }}" style="max-height: 50px;">
                                {% else %}
                                    <span class="text-muted">N/A</span>
                                {% endif %}
                            </td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.category.name ?? 'N/A' }}</td>
                            <td>{{ product.price }}€</td>
                            <td>
                                {% if product.stock > 0 %}
                                    <span class="badge bg-success">{{ product.stock }}</span>
                                {% else %}
                                    <span class="badge bg-danger">0</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_admin_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">Éditer</a>
                                <form method="POST" action="{{ path('app_admin_product_delete', {'id': product.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">Aucun produit trouvé.</div>
    {% endif %}
</div>
{% endblock %}
