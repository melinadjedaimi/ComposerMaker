{% extends "base.html.twig" %}

{% block title %}Gérer les Commandes - Melya Admin{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">Commandes</h1>

    {% if app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {% for message in app.flashes('success') %}
                {{ message }}
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}

    {% if orders|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>N° Commande</th>
                        <th>Client</th>
                        <th>Total</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>#{{ order.id }}</td>
                            <td>{{ order.user.email ?? 'Anonyme' }}</td>
                            <td>{{ order.total }}€</td>
                            <td>{{ order.createdAt|date('d/m/Y') }}</td>
                            <td>
                                <span class="badge bg-warning">{{ order.status }}</span>
                            </td>
                            <td>
                                <a href="{{ path('app_admin_order_show', {'id': order.id}) }}" class="btn btn-sm btn-info">Voir</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">Aucune commande trouvée.</div>
    {% endif %}
</div>
{% endblock %}
