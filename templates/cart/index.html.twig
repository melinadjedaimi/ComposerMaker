{% extends 'base.html.twig' %}

{% block title %}Mon Panier - Bijoux Élégants{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Mon Panier</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% if items is empty %}
        <p class="text-center">Votre panier est vide.</p>
        <div class="text-center">
            <a href="{{ path('app_product_index') }}" class="btn btn-primary">Voir les produits</a>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-8">
                {% for item in items %}
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <!-- Placeholder for product image -->
                                <div class="text-center">
                                    <p>Image</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h5 class="card-title">{{ item.product.name }}</h5>
                                <p class="card-text">{{ item.product.description }}</p>
                                <p class="card-text">Prix unitaire: {{ item.product.price }} €</p>
                                <p class="card-text">Quantité: {{ item.quantity }}</p>
                                <p class="card-text"><strong>Sous-total: {{ item.product.price * item.quantity }} €</strong></p>
                            </div>
                            <div class="col-md-3">
                                <a href="{{ path('app_cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">Retirer</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Récapitulatif</h5>
                        <p class="card-text">Total: <strong>{{ total }} €</strong></p>
                        <a href="{{ path('app_cart_clear') }}" class="btn btn-warning">Vider le panier</a>
                        <button class="btn btn-success mt-2">Commander</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}